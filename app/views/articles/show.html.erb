<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
 <h4 class="center"><strong>Description:</strong></h4>
 <hr>
<%= simple_format(@article.description) %>
<%= link_to "Редактировать", edit_article_path(@article), class: "btn btn-xs btn-primary" %> 
<%= link_to "Удалить", article_path(@article), method: :delete, data: { confirm: "Вы действительно хотите удалить статью?"}, class: "btn btn-xs btn-danger" %> 
<%= link_to 'Назад', articles_path, class: "btn btn-xs btn-success" %>