<h1>Все статьи</h1>
<p>
<%= link_to "Создать статью", new_article_path %>
</p>
<table>
 <tr>
  <th>Заголовок</th>
  <th>Примечание</th>
 </tr>
 <% @articles.each do |article| %>
 <tr>
  <td><%= article.title %></td>
  <td><%= article.description %></td>
  <td><%= link_to 'Редактировать', edit_article_path(article) %></td>
  <td><%= link_to 'Просмотр', article_path(article) %></td>
  <td><%= link_to 'Удалить', article_path(article), method: :delete, data: {confirm: "Вы действительно хотите удалить статью?"} %></td>
 </tr>
 <% end %>
</table>
